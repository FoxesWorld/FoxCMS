			<input class="input100" type="text" name="fullName" placeholder="Имя" required>
			<span class="focus-input100-1"></span>
			<span class="focus-input100-2"></span>
		</div>

		<div class="wrap-input100 validate-input" data-validate="Phone is required">
			<input style="height: 61px" type="text" name="mobilePhoneNumber" class="phone_mask" placeholder="Телефон" required>
			<span class="focus-input100-1"></span>
			<span class="focus-input100-2"></span>
		</div>
		
  <div>

		<button type="submit" class="login">Закзать</button>
		<input type="hidden" name="sysRequest" value="telegramSend">
	</form>
</div>

    <script>
        $(".phone_mask").mask("+7(999)999-99-99");
    </script>
	</pageContent>