<useroption>
   {
   "optionGroup": 5,
   "type": "pageContent"
   }
</useroption>

<pageContent>
<div class="pageRoot">
	   <div class="page-content">
	   <div class="formContent">
	   <h1>Авторизация</h1>
		<form method="POST" action="/" id="auth">
			<table>
				<tr>
					<td colspan="2">
						[input type="text" name="login" placeholder="Логин"]
					</td>
				</tr>
				
				<tr>
					<td>
						<button type="submit" class="login">Войти <i class="fa fa-sign-in" aria-hidden="true"></i></button>
					</td>
					<td>
						[input type="password" name="password" placeholder="Пароль"]
					</td>
				
				</tr>
				</table>
				
				<label for="rememberMe" class="checkbox_container">
					Запомнить меня
					<input type="checkbox" style="display: none;" name="rememberMe" id="rememberMe">
					<span class="checkmark"></span>
				</label>
				

				
				<div class="c-captcha">
					<div class="g-recaptcha" data-callback="fillResponse" data-sitekey="{siteKey}" data-theme="Light"></div>
					<script src="https://www.google.com/recaptcha/api.js?hl={$lang['wysiwyg_language']}" async defer></script>
				</div>

				<script>
					function fillResponse(){
						$("#g-recaptcha-response").attr('value', grecaptcha.getResponse());
					}
				</script>	
				<input name="userAction" type="hidden" value="auth" />
				
			</form>
			
			<a href="#" onclick="foxEngine.page.loadPage('reg', replaceData.contentBlock); return false;">Нет аккаунта?</a>
			</div>
		</div>
</div>
	</pageContent>